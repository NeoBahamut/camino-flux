{
  "name": "camino-flux",
  "version": "0.10.12",
  "description": "Flux géographiques de Camino, le cadastre minier numérique ouvert",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/MTES-MCT/camino-flux"
  },
  "main": "index.js",
  "scripts": {
    "build": "node --no-warnings ./lib/public/index.js",
    "dev": "onchange '**/*.js' -i -k -- npm run build",
    "start": "npm run build & node ./index.js",
    "commit": "npx git-cz",
    "release": "standard-version && git push --follow-tags upstream master && npx conventional-github-releaser"
  },
  "author": {
    "name": "François Romain",
    "email": "francoisromain@gmail.com",
    "url": "https://francoisromain.com"
  },
  "dependencies": {
    "basic-auth": "^2.0.1",
    "compression": "^1.7.4",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "matomo-tracker": "^2.2.1",
    "node-fetch": "^2.6.0",
    "npm-check-updates": "^4.1.0",
    "rimraf": "^3.0.2",
    "serve-index": "^1.9.1"
  },
  "devDependencies": {
    "@types/basic-auth": "^1.1.3",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.3",
    "@types/node": "^13.9.5",
    "@types/node-fetch": "^2.5.5",
    "@types/serve-index": "^1.7.30",
    "commitizen": "^4.0.4",
    "conventional-github-releaser": "^3.1.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "onchange": "^6.1.0",
    "prettier": "^2.0.2",
    "standard-version": "^7.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "prettier",
      "prettier/standard"
    ],
    "env": {
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "no-throw-literal": 0,
      "prettier/prettier": [
        "error"
      ]
    }
  }
}
